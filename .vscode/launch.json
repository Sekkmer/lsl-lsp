{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/client-vscode"
      ],
      "outFiles": [
        "${workspaceFolder}/client-vscode/out/**/*.js",
        "${workspaceFolder}/server/out/**/*.js"
      ],
      "preLaunchTask": "build all"
    },
    {
      "name": "Attach LSP Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
