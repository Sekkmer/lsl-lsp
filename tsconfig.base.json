{
	"compilerOptions": {
		// Emit modern JS compatible with current Node LTS
		"target": "ES2022",
		"lib": ["ES2022"],
		// Use Node ESM resolution for all packages
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		// Strictness and ergonomics
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"removeComments": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"isolatedModules": true,
		"allowImportingTsExtensions": false
	}
}
