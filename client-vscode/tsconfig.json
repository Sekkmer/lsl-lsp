{
	"compilerOptions": {
		"outDir": "out",
		"rootDir": "src",
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"lib": [
			"ES2022"
		],
		"strict": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"types": [
			"vscode",
			"node"
		]
	},
	"include": [
		"src/**/*"
	]
}
